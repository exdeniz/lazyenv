{
  "name": "@exdeniz/lazyenv",
  "version": "1.0.2",
  "description": "TUI utility for switching .env files and running commands",
  "type": "module",
  "bin": {
    "lazyenv": "./dist/index.js"
  },
  "scripts": {
    "dev": "bun run src/index.tsx",
    "build": "bun build src/index.tsx --target=node --outdir=dist --format=esm --external react --external ink --external ink-select-input --external figures",
    "start": "node dist/index.js",
    "lint": "oxlint src",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "env",
    "environment",
    "cli",
    "tui",
    "dotenv"
  ],
  "author": "exdeniz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exdeniz/lazyenv.git"
  },
  "bugs": {
    "url": "https://github.com/exdeniz/lazyenv/issues"
  },
  "homepage": "https://github.com/exdeniz/lazyenv#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "ink": "^6.3.1",
    "ink-select-input": "^6.2.0",
    "ink-syntax-highlight": "^2.0.2",
    "react": "^19.2.0",
    "figures": "^6.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "@types/react": "^19.2.0",
    "typescript": "^5.9.3",
    "oxlint": "^1.19.0"
  }
}
